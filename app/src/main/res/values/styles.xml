<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_main_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_size_welcome</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_regular_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_size_regular</item>
    </style>

    <style name="style_small_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="style_input_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_size_regular</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
    </style>

    <style name="style_validation">
        <item name="android:textColor">@color/redColor</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="style_regular_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:layout_marginEnd">@dimen/spacing</item>
        <item name="android:padding">@dimen/padding_start</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_size_regular</item>
    </style>

</resources>
